<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#514C4C"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="나의체중"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/wieghtpage"/>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:id="@+id/wei_input"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="23dp"
            android:text="현재 내몸무게 입력"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/wei_input2"
            android:layout_margin="10dp"
            android:text="자신의 몸무게를 입력하여 저장하세요."
            app:layout_constraintTop_toBottomOf="@+id/wei_input"
            android:textSize="14dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/wei_SexGrouptextview"
            android:paddingTop="30dp"
            android:textSize="14dp"
            app:layout_constraintTop_toBottomOf="@+id/wei_input2"
            android:text="성별선택"/>
        <RadioGroup
            android:id="@+id/wei_SexGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toBottomOf="@+id/wei_SexGrouptextview"
            >
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wei_Male"
                android:text="남자"
                android:checked="true"
                android:layout_marginEnd="10dp"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/wei_Female"
                android:text="여자"
                android:layout_marginEnd="10dp"/>
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/age_textview"
            android:paddingTop="30dp"
            android:textSize="14dp"
            android:text="나이"
            app:layout_constraintTop_toBottomOf="@+id/wei_SexGroup"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="살"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:maxLength="1"
            android:id="@+id/wei_birth"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/age_textview"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/wei_height_textview"
            android:paddingTop="30dp"
            android:textSize="14dp"
            android:text="키"
            app:layout_constraintTop_toBottomOf="@+id/wei_birth"/>


        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="cm"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:maxLength="1"
            android:id="@+id/wei_height"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/wei_height_textview"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/wei_weight_textview"
            android:paddingTop="30dp"
            android:textSize="14dp"
            android:text="몸무게"
            app:layout_constraintTop_toBottomOf="@+id/wei_height"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="kg"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:maxLength="2"
            android:id="@+id/wei_Weight"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/wei_weight_textview"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_gravity="bottom"
        android:orientation="vertical">
    </LinearLayout>
    <Button
        android:id="@+id/SaveProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="저장하기"/>
</LinearLayout>