<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#50b4b4b4">

    <LinearLayout
        android:id="@+id/second"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="0.3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="식단을 위해 목표가 필요해요 :)"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="30dp"
            android:textStyle="bold"
            android:text="하루 목표를 알려주세요."/>
    </LinearLayout>
    <EditText
        android:id="@+id/EdtRCalories"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="100dp"
        android:ems="10"
        android:hint="칼로리"
        android:inputType="textPersonName"
        app:layout_constraintTop_toBottomOf="@+id/second"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/EdtRCarbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="탄수화물"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/EdtRCalories"
        app:layout_constraintStart_toStartOf="@+id/EdtRCalories"
        app:layout_constraintTop_toBottomOf="@+id/EdtRCalories" />

    <EditText
        android:id="@+id/EdtRProteins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="단백질"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/EdtRCalories"
        app:layout_constraintStart_toStartOf="@+id/EdtRCalories"
        app:layout_constraintTop_toBottomOf="@+id/EdtRCarbs" />
    <EditText
        android:id="@+id/EdtRFats"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="지방"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/EdtRCarbs"
        app:layout_constraintStart_toStartOf="@+id/EdtRCarbs"
        app:layout_constraintTop_toBottomOf="@+id/EdtRProteins" />

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="회원가입"
        android:textColor="#000000"
        android:textStyle="bold"
        android:backgroundTint="#b9b9c9"
        app:layout_constraintEnd_toEndOf="@+id/EdtRFats"
        app:layout_constraintStart_toStartOf="@+id/EdtRFats"
        app:layout_constraintTop_toBottomOf="@+id/EdtRFats" />
</androidx.constraintlayout.widget.ConstraintLayout>
