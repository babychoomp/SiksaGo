<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#514C4C"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:padding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="체질량지수(BMI)계산기"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:id="@+id/BMIPage"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/second"
        android:background="#50b4b4b4">
        <TextView
            android:id="@+id/tv1"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="23dp"
            android:text="기본정보 입력" />
        <TextView
            android:id="@+id/tv2"
            app:layout_constraintTop_toBottomOf="@+id/tv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="신체질량지수(BMI)와 비만도를 확인하세요."
            android:textSize="14dp" />
        <TextView
            android:id="@+id/tv3"
            app:layout_constraintTop_toBottomOf="@+id/tv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:textSize="14dp"
            android:text="성별선택" />
        <RadioGroup
            app:layout_constraintTop_toBottomOf="@+id/tv3"
            android:id="@+id/SexGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Male"
                android:text="남자"
                android:checked="true"
                android:layout_marginEnd="10dp"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Female"
                android:text="여자"
                android:layout_marginEnd="10dp"/>
        </RadioGroup>
        <TextView
            android:id="@+id/tv4"
            app:layout_constraintTop_toBottomOf="@+id/SexGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:textSize="14dp"
            android:text="나이" />
        <EditText
            app:layout_constraintTop_toBottomOf="@+id/tv4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="세"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:maxLength="2"
            android:id="@+id/birth"
            android:padding="10dp"
            />
        <TextView
            android:id="@+id/tv5"
            app:layout_constraintTop_toBottomOf="@+id/birth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:textSize="14dp"
            android:text="키" />
        <EditText
            app:layout_constraintTop_toBottomOf="@+id/tv5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="cm"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:maxLength="3"
            android:id="@+id/height"
            android:padding="10dp"
            />
        <TextView
            android:id="@+id/tv6"
            app:layout_constraintTop_toBottomOf="@+id/height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="30dp"
            android:textSize="14dp"
            android:text="몸무게" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="kg"
            android:textColor="@color/black"
            android:textSize="15dp"
            android:maxLength="3"
            android:id="@+id/Weight"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@+id/tv6"
            />
        <Button
            app:layout_constraintTop_toBottomOf="@+id/Weight"
            android:id="@+id/SaveProfile"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="저장하기" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>